        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mainActivity.MainActivity" />

        <activity android:name=".Activity.Classify" android:theme="@style/zhou"/>
        <activity android:name=".Activity.Room" android:theme="@style/zhou"/>
        <activity android:name=".Activity.Disease" android:theme="@style/zhou"/>
        <activity android:name=".Activity.SearchMain" android:theme="@style/zhou"></activity>
    </application>

</manifest>