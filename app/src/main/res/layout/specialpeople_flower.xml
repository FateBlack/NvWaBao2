<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FCFCFC"
    android:id="@+id/ll_container"
    >

    <include layout="@layout/common_titile"
        android:id="@+id/flower_title"/>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_reveal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/img_reveal_share"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cat"
            android:transitionName="share" />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_below="@id/flower_title"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/flower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/flower5"/>

    </LinearLayout>
    <!--<TextView
        android:id="@+id/go_say"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="280dp"
        android:layout_height="280dp" />-->
    <TextView
        android:id="@+id/flower_say"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="水水水水水水水水"
        android:visibility="gone"
        />




</RelativeLayout>