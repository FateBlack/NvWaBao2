<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:orientation="horizontal"
    >
        <EditText
            android:id="@+id/conmm"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_weight="5"
            android:background="@drawable/shape_detail_comment"
            android:drawablePadding="6dp"
            android:gravity="center|left"
            android:paddingLeft="12dp"
            android:hint="@string/detail_write_comment"
            android:textColor="#ff222222"
            android:textSize="13sp"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <FrameLayout
                android:id="@+id/fl_comment_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/commenMy"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:onClick="commenMy"
                    android:src="@mipmap/send"/>
            </FrameLayout>
        </FrameLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@color/white"
            android:paddingLeft="5dip"
            android:scaleType="center"
            android:src="@mipmap/nsave"
            android:id="@+id/lovesave"
           />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/hitbtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:onClick="commenMy"
                android:src="@mipmap/zanf"/>

            <TextView
                android:id="@+id/love_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8.5dip"
                android:background="@drawable/main_tab_badge_bg"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:singleLine="true"
                android:textColor="#fffafafa"
                android:textSize="8sp"
                android:text="123"
                />
        </FrameLayout>
    </FrameLayout>
</LinearLayout>