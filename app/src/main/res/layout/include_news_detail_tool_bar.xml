<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/bg_color"
    android:orientation="horizontal"
    >
        <EditText
            android:id="@+id/conmm"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_weight="5"
            android:background="@drawable/shape_detail_comment"
            android:drawablePadding="6dp"
            android:gravity="center|left"
            android:paddingLeft="12dp"
            android:hint="@string/detail_write_comment"
            android:textColor="#ff222222"
            android:textSize="13sp"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <FrameLayout
                android:id="@+id/fl_comment_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/commenMy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:onClick="commenMy"
                    android:src="@mipmap/comment_count"/>

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8.5dip"
                    android:background="@drawable/main_tab_badge_bg"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:singleLine="true"
                    android:textColor="#fffafafa"
                    android:textSize="8sp"
                    android:text="123"
                    android:visibility="gone"/>
            </FrameLayout>
        </FrameLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:paddingLeft="5dip"
            android:scaleType="center"
            android:src="@mipmap/new_love_tabbar"
            android:id="@+id/lovesave"
            android:onClick="commenMy"/>

    <ImageView
        android:id="@+id/shares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="?android:attr/actionModeShareDrawable"
        android:paddingLeft="5dip"
        android:scaleType="center"
        android:onClick="commenMy"
        />
</LinearLayout>