<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_people"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/a1_people"
            />
        <TextView
            android:text="ssssssssss"
            android:id="@+id/name_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="#84C1FF"
            />
        <ImageView
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/cir_pinglun_address"/>
        <TextView
            android:id="@+id/address_people"
            android:text="正在加载"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="52dp"
            android:textSize="10dp"
            android:textColor="#BEBEBE"/>

        <ImageView
            android:id="@+id/go_people"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/right_back"
            android:tint="#c0c0c0"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/chat_people"
        android:text="waite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:background="#FCFCFC"
        android:layout_width="fill_parent"
        android:layout_height="8dp"/>
</LinearLayout>
